{
  "version": 2,
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/((?!index|api).*\\w.*)", "destination": "/api/single-movie?slug=$1" }
  ]
}